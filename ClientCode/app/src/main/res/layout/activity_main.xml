<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    tools:context=".presentation.activity.MainActivity">

    <include layout="@layout/toolbar"
        android:id="@+id/toolbar"></include>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="HeartRate Detection Off"
        android:id="@+id/beats"
        android:textSize="19dp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#cf996015"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:weightSum="1"
        android:id="@+id/buttomBar">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="25dp"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unselected"
                android:id="@+id/titleBar"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:textIsSelectable="false"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="3dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:id="@+id/authorBar"
                android:text="Unknown Artist"
                android:textSize="15dp"
                android:textColor="#ffffff" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout3"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout4">

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/btnRun"
            android:background="@drawable/run_click"
            android:scaleType="fitCenter"
            android:layout_marginLeft="100dp" />

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/btnSleep"
            android:background="@drawable/sleep_click"
            android:scaleType="fitCenter"
            android:layout_marginLeft="40dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:id="@+id/linearLayout4"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout5">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/btnBack"
            android:src="@android:drawable/ic_media_previous"
            android:background="#00000000"
            android:scaleType="fitCenter"
            android:layout_weight="0.3"
            android:layout_marginTop="65dp"
            android:layout_marginLeft="15dp" />

        <ImageButton
            android:layout_width="200dp"
            android:layout_height="185dp"
            android:id="@+id/btnPlay"
            android:src="@drawable/on"
            android:background="@drawable/coffee"
            android:scaleType="center"
            android:layout_marginLeft="10dp" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/btnNext"
            android:src="@android:drawable/ic_media_next"
            android:background="#00000000"
            android:scaleType="fitCenter"
            android:layout_marginTop="65dp"
            android:layout_weight="0.3" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout5"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/bpm"
        android:layout_marginTop="20dp">

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/btnUser"
            android:background="@drawable/offline"
            android:scaleType="fitCenter"
            android:layout_marginLeft="100dp" />

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/btnBand"
            android:background="@drawable/band_click"
            android:scaleType="fitCenter"
            android:layout_marginLeft="40dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout6">

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Music bpm:"
        android:id="@+id/bpm"
        android:layout_below="@+id/beats"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffffff"
        android:textSize="19dp" />


</RelativeLayout>
